<Window x:Class="NetChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetChanger"
        mc:Ignorable="d"
        Title="Network switch" Height="140" Width="180">
    <Grid>
        <DockPanel>
            <UniformGrid Rows="1" Columns="2" DockPanel.Dock="Bottom">
                <Button Margin="5" Content="Work"/>
                <Button Margin="5" Content="Rest"/>
            </UniformGrid>
            <UniformGrid Rows="3" Columns="1">
                <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                    <TextBlock Text="IP"/>
                </Border>
                <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                    <TextBlock Text="Mask"/>
                </Border>
                <Border BorderThickness="1" BorderBrush="Black" Margin="5">
                    <TextBlock Text="Broadcast"/>
                </Border>
            </UniformGrid>
        </DockPanel>
    </Grid>
</Window>
